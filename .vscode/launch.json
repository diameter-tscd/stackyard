    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}\\cmd\\app\\main.go",
            "output": "${workspaceFolder}\\debug-main.exe"
        },
        {
            "name": "Build & Launch (Dist)",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}\\dist\\stackyard.exe",
            "cwd": "${workspaceFolder}\\dist",
            "preLaunchTask": "Build App"
        }
    ]
}
